#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    for (int i = 1; i <= t;i++) {
        int n;
        cin >> n;

        vector<int> a(n);
        for (int i = 0; i < n; i++) {
            cin >> a[i];
        }

        int neg = 0, zero = 0;

        for (int j = 0; j < n; j++) {
            if (a[j] == -1)
                neg++;
            else if (a[j] == 0)
                zero++;
        }

        int ops = 0;

        if (zero > 0) {
            if (neg % 2 == 0)
                ops = zero;
            else
                ops = zero + 1;
        } else {
            if (neg % 2 == 0)
                ops = 0;
            else
                ops = 2;
        }

        cout << ops << endl;
    }

    return 0;
}
